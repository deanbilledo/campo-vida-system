# Campo Vida Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/campo-vida
# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campo-vida?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Campo Vida <noreply@campo-vida.com>

# Email Configuration (Alternative - Hostinger)
# EMAIL_HOST=smtp.hostinger.com
# EMAIL_PORT=587
# EMAIL_USER=noreply@campo-vida.com
# EMAIL_PASS=your-email-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Business Configuration
BUSINESS_NAME=Campo Vida
BUSINESS_EMAIL=info@campo-vida.com
BUSINESS_PHONE=+63-xxx-xxx-xxxx
BUSINESS_ADDRESS=Your Business Address

# Payment Configuration (for future integration)
GCASH_MERCHANT_ID=your-gcash-merchant-id
GCASH_SECRET_KEY=your-gcash-secret-key

# COD Configuration
COD_MINIMUM_ORDERS=5
COD_VERIFICATION_PERIOD=30

# Delivery Configuration
DEFAULT_DELIVERY_FEE=50
FREE_DELIVERY_THRESHOLD=1000
MAX_DELIVERY_DISTANCE=50

# Admin Configuration
ADMIN_EMAIL=admin@campo-vida.com
ADMIN_PHONE=+63-xxx-xxx-xxxx

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Cache Configuration (if using Redis in the future)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# API Keys (for future integrations)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# FACEBOOK_PIXEL_ID=your-facebook-pixel-id
# GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Production-only settings
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key
# DOMAIN=campo-vida.com
