# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campo-vida
DB_NAME=campo_vida_db

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (for notifications)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=CampoVida

# GCash Configuration
GCASH_MERCHANT_ID=your-merchant-id
GCASH_API_KEY=your-gcash-api-key

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX=100

# Business Configuration
STORE_LATITUDE=14.5995
STORE_LONGITUDE=120.9842
DELIVERY_RADIUS_KM=10
MAX_DAILY_ORDERS=20
ORDER_CUTOFF_HOUR=15
DELIVERY_FEE=50
COD_SURCHARGE=30
RESCHEDULE_FEE=50
MIN_GCASH_ORDERS_FOR_COD=5

# Operational Hours
STORE_OPEN_HOUR=8
STORE_CLOSE_HOUR=17
DELIVERY_START_HOUR=9
DELIVERY_END_HOUR=17

# Inventory Settings
LOW_STOCK_THRESHOLD=3
SAFETY_BUFFER=2
SENSITIVE_PRODUCT_PRICE_THRESHOLD=300
